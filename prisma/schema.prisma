generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TxLog {
  id        String   @id @default(cuid())
  userId    String?   // optional for demo
  type      String
  chain     String
  to        String
  amount    Float
  hash      String?
  status    String
  createdAt DateTime @default(now())
}

model NLIntent {
  id        String   @id @default(cuid())
  userId    String?  
  userInput String
  parsed    Json
  result    Json?
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstname String?
  lastname  String?
  createdAt DateTime @default(now())
}



